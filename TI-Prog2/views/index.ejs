<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

	<body>

		<!-- Header -->
		<%- include("./partials/header") %>
			<!-- /Header -->

			<!-- Banner -->
			<div class="banner">
				<img src="images/auto-banner.jpeg" alt="Banner de ofertas">
			</div>
			<!-- /Banner -->

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>

					<% for (let i = 0; i < productos.length; i++) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/<%= productos[i].id %>">
									<figure class="product-box_image">
										<img class="fotoIndex" src="/images/products/<%= productos[i].imagenProduct %>" alt="<%= productos[i].nombreProduct %>">
									</figure>
									<article class="product-box_data">
										<h2><%= productos[i].nombreProduct %></h2>
										<p><%= productos[i].descripcionProduct %></p>
										<p>Comentarios: <%= productos[i].comentarios ? productos[i].comentarios.length : 0 %></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
					

							<!-- /Novedades -->
							<!-- Más comentados -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Más comentados</h2>
									</div>
									<% for (let i = 0; i < productos.length; i++) { %>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/product/<%= productos[i].id %>">
													<figure class="product-box_image">
														<img class="fotoIndex" src="/images/products/<%= productos[i].imagenProduct %>" alt="<%= productos[i].nombreProduct %>">
													</figure>
													<article class="product-box_data">
														<h2><%= productos[i].nombreProduct %></h2>
														<p><%= productos[i].descripcionProduct %></p>
														<p>Comentarios: <%= productos[i].comentarios ? productos[i].comentarios.length : 0 %></p>
													</article>
												</a>
											</section>
										</div>
									<% } %>


											<!-- footer -->
											<%- include("./partials/footer") %>
												<!-- /footer -->
	</body>

</html>