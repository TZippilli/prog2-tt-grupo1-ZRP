<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head") %>

<body>
    <% if (user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Editar mi perfil</h2>
            </div>
            <div class="col-12">
                <form action="/profile/edit/<%= user.id %>" method="POST" enctype="multipart/form-data" class="form-login-register">
                    <div class="formulario">
                        <label for="email" style="font-size: 18px;">Email:</label>
                        <input type="email" class="form-login" id="email" name="email" value="<%= user.email %>" required>
                    </div>
                    <div class="formulario">
                        <label for="usuario" style="font-size: 18px;">Usuario:</label>
                        <input type="text" class="form-login" id="usuario" name="nombre" value="<%= user.nombre %>" required>
                    </div>
                    <div class="formulario">
                        <label for="contrasena" style="font-size: 18px;">Contrase√±a:</label>
                        <input type="password" class="form-login" id="contrasena" name="contrasenia">
                    </div>
                    <div class="formulario">
                        <label for="fecha_nacimiento" style="font-size: 18px;">Fecha de Nacimiento:</label>
                        <input type="date" class="form-login" id="fecha_nacimiento" name="fechaNacimiento" value="<%= user.fechaNacimiento %>" required>
                    </div>
                    <div class="formulario">
                        <label for="nro_documento" style="font-size: 18px;">Nro de Documento:</label>
                        <input type="number" class="form-login" id="nro_documento" name="numeroDocumento" value="<%= user.numeroDocumento %>" required>
                    </div>
                    <div class="formulario">
                        <label for="foto_perfil" style="font-size: 18px;">Foto de Perfil:</label>
                        <input type="text" class="form-login" id="foto_perfil" name="foto" value="<%= user.foto %>" required>
                    </div>
                    <button type="submit" class="button-form">Guardar Cambios</button>
                </form>
            </div>
        </div>
    </div>

    <% include("./partials/footer") %>
</body>
</html>
