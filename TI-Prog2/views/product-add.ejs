<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<%- include("./partials/headerLogueado") %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> 
				<form action="/profile/edit" method="GET" class="form-login-register">
					<div class="formulario">
						<label for="imagen" style="font-size: 18px;">Imagen:</label>
						<input type="file" class="form-login" id="imagen" name="imagen" accept="image/*" required>
					</div>
					<div class="formulario">
						<label for="nombre" style="font-size: 18px;">Nombre del Producto:</label>
						<input type="text" class="form-login" id="nombre" name="nombre" required>
					</div>
					<div class="formulario">
						<label for="descripcion" style="font-size: 18px;">Descripci√≥n:</label>
						<textarea class="form-login" id="descripcion" name="descripcion" rows="4" required></textarea>
					</div>
					<button type="submit" class="button-form">Enviar</button>
				</form>


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>