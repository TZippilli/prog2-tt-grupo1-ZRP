<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
	<!-- Header -->
	<%- include("./partials/header") %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="https://via.placeholder.com/150" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">Nombre del usuario 
						<a href="/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->


			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
	
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
        </div>
        <% db.productos.forEach(function(producto) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/product">
                        <figure class="product-box_image">
                            <img src="images/products/<%= producto.imagen %>" alt="<%= producto.nombre %>">
                        </figure>
                        <article class="product-box_data">
                            <h2><%= producto.nombre %></h2>
                            <p><%= producto.descripcion %></p>
                            <p>Comentarios: <%= producto.comentarios.length %></p>
                        </article>
                    </a>
                </section>
            </div>
        <% }); %>
    </div>
</div>
<!-- /Mis productos -->

			</div>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>