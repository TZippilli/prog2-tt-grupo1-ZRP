<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

    <body>
        <!-- Header -->
        <%- include("./partials/header") %>
            <!-- /Header -->

            <!-- Registro -->
            <div class="container form-login-register">
                <div class="row">
                    <div class="col-12">
                        <h2 class="registro-title">Ingresá tus datos</h2>
                    </div>
                    <div class="col-12">
                        <form action="/profile/edit" method="GET" class="form-login-register">
                            <div class="formulario">
                                <label for="usuario" style="font-size: 18px;">Usuario:</label>
                                <input type="text" class="form-login" id="email" name="email" required>
                            </div>
                            <div class="formulario">
                                <label for="email" style="font-size: 18px;">Correo electrónico:</label>
                                <input type="email" class="form-login" id="usuario" name="usuario" required>
                            </div>
                            <div class="formulario">
                                <label for="contrasena" style="font-size: 18px;">Contraseña:</label>
                                <input type="password" class="form-login" id="contrasena" name="contrasena" required>
                            </div>
                            <div class="formulario">
                                <label for="fecha_nacimiento" style="font-size: 18px;">Fecha de Nacimiento:</label>
                                <input type="date" class="form-login" id="fecha_nacimiento" name="fecha_nacimiento"
                                    required>
                            </div>
                            <div class="formulario">
                                <label for="nro_documento" style="font-size: 18px;">Nro de Documento:</label>
                                <input type="number" class="form-login" id="nro_documento" name="nro_documento"
                                    required>
                            </div>
                            <div class="formulario">
                                <label for="foto_perfil" style="font-size: 18px;">Foto de Perfil:</label>
                                <input type="text" class="form-login" id="foto_perfil" name="foto_perfil" required>
                            </div>
                            <button type="submit" class="button-form">Registrarse</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- footer -->
            <%- include("./partials/footer") %>
                <!-- /footer -->
    </body>

</html>