<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

    <body>
        <!-- Header -->
        <% if (locals.user != undefined) { %>
			<%- include('./partials/headerLogueado') %>
		<% } else { %>
			<%- include('./partials/header') %>
		<% } %>

            <!-- Registro -->
            <div class="container form-login-register">
                <div class="row">
                    <div class="col-12">
                        <h2 class="registro-title">Ingresá tus datos</h2>
                    </div>
                    <div class="col-12">
                        <form action="/profile/edit" method="GET" class="form-login-register">
                            <div class="formulario">
                                <label for="email" style="font-size: 18px;">Correo electrónico:</label>
                                <input type="email" class="form-login" id="usuario" name="email" required>
                            </div>
                            <div class="formulario">
                                <label for="usuario" style="font-size: 18px;">Usuario:</label>
                                <input type="text" class="form-login" id="email" name="nombre" required>
                                <% if (locals.errors && errors.nombre) { %>
                                    <p class="error"><%= errors.nombre %></p>
                                <% } %>
                            </div>

                            <div class="formulario">
                                <label for="contrasena" style="font-size: 18px;">Contraseña:</label>
                                <input type="password" class="form-login" id="contrasena" name="contrasenia" required>
                            </div>
                            <div class="formulario">
                                <label for="fecha_nacimiento" style="font-size: 18px;">Fecha de Nacimiento:</label>
                                <input type="date" class="form-login" id="fecha_nacimiento" name="fechaNacimiento"
                                    required>
                            </div>
                            <div class="formulario">
                                <label for="nro_documento" style="font-size: 18px;">Nro de Documento:</label>
                                <input type="number" class="form-login" id="nro_documento" name="numeroDocumento"
                                    required>
                            </div>
                            <div class="formulario">
                                <label for="foto_perfil" style="font-size: 18px;">Foto de Perfil:</label>
                                <input type="text" class="form-login" id="foto_perfil" name="foto" required>
                            </div>
                            <button type="submit" class="button-form">Registrarse</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- footer -->
            <%- include("./partials/footer") %>
                <!-- /footer -->
    </body>

</html>