<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head") %>

<body>
    <!-- Header -->
    <%- include("./partials/header") %>
    <!-- /Header -->

    <!-- Registro -->
    <div class="container form-login-register">
        <div class="row">
            <div class="col-12">
                <h2 class="registro-title">Ingresá tus datos</h2>
            </div>
            <div class="col-12">
                <form action="/users/register" method="GET">
                    <div class="formulario">
                        <label for="usuario">Usuario:</label>
                        <input type="text" class="formulario-register" id="usuario" name="usuario" required>
                    </div>
                    <div class="formulario">
                        <label for="email">Correo electrónico:</label>
                        <input type="email" class="formulario-register" id="email" name="email" required>
                    </div>
                    <div class="formulario">
                        <label for="contrasena">Contraseña:</label>
                        <input type="password" class="formulario-register" id="contrasena" name="contrasena" required>
                    </div>
                    <div class="formulario">
                        <label for="fecha_nacimiento">Fecha de nacimiento:</label>
                        <input type="date" class="formulario-register" id="fecha_nacimiento" name="fecha_nacimiento" required>
                    </div>
                    <div class="formulario">
                        <label for="numero_documento">Número de documento:</label>
                        <input type="number" class="formulario-register" id="numero_documento" name="numero_documento" required>
                    </div>
                    <div class="formulario">
                        <label for="foto_perfil">Foto de perfil:</label>
                        <input type="text" class="formulario-register" id="foto_perfil" name="foto_perfil">
                    </div>
                    <button type="submit" class="button-form">Registrarse</button>
                </form>
            </div>
        </div>
    </div>

    <!-- footer -->
    <%- include("./partials/footer") %>
    <!-- /footer -->
</body>

</html>

